
@model PagedList.IPagedList<DataLayer.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUsers.cshtml";
}


<h2>Product</h2>
<!-- product section start -->
<div class="content">
    <div class="section group">
        @foreach (var item in Model)
        {
            var url = "/chi-tiet/" + item.Slug + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="#"><img src="@item.Image" alt="@item" /></a>
                <h2>@item.ProductName </h2>
                <div @*class="price-details"*@ style="display:flex;justify-content:space-between;align-items:center">
                    <div class="price-number">
                        <p><span class="rupees">$@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Connect with shop")</span></p>
                    </div>
                    <div style="right:0">
                        <i class="fa fa-eye " id="eye">@item.NumberViews</i>
                    </div>
                    
                </div>
                
            </div>
        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Product", new { page, @searchString = ViewBag.SearchString }))

</div>


<script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
</script>
<!-- product section end -->
<!-- footer section start -->
