@model PagedList.IPagedList<DataLayer.ViewModel.ReviewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "List Review";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    List Review
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">List Review</h6>
                </div>
                <div class="card-body">
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Title</th>
                                    <th>ProductName</th>
                                    <th>Image</th>
                                    <th>View</th>
                                    <th>CreateAt</th>
                                    <th>UpdateAt</th>
                                    <th>DeleteAt</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="11" class="text-center">No data</td>
                                    </tr>
                                }
                                @if (Model.Count != 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">


                                            <td>@item.UserName</td>
                                            <td>@item.Title</td>
                                            <td>@item.ProductName</td>
                                            <td>
                                                <img src="@item.Image" />
                                            </td>
                                            <td>@item.View</td>
                                            <td>@(item.CreateAt == null ? "" : item.CreateAt.Value.ToString("dd/MM/yyyy"))</td>
                                            <td>@(item.UpdateAt == null ? "" : item.UpdateAt.Value.ToString("dd/MM/yyyy"))</td>
                                            <td>@(item.DeleteAt == null ? "" : item.DeleteAt.Value.ToString("dd/MM/yyyy"))</td>
                                            <td><a style="text-decoration:none" href="#" class="btn-active" data-id="@item.ID">@(item.Status == 1 ? "Hide" : "Display")</a></td>
                                            <td>
                                                <a class="btn btn-success" style="text-decoration:none" href="/Admin/ListReview/UpdateReview/@item.ID"><i class="fa fa-edit">Edit</i></a>
                                                <a class="btn btn-danger" style="text-decoration:none" href="/Admin/ListReview/Delete/@item.ID" onclick="return confirm('Do you want to delete?')"><i class="fa fa-trash">Delete</i></a>
                                            </td>

                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                    </div>
                    @*<div class="input-group-append">
                        <a class="btn btn-primary" href="/Admin/Product/CreateProduct">Create Product</a>
                    </div>*@

                </div>
            </div>

        </div>
    </div>
</div>

